<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- @formatter:off -->
<mapper namespace="jp.co.ot.shiritori.repository.ShiritoriRepository">

	<insert id="entry">
		INSERT INTO 
			training.shiritori_entry (entry)
		VALUES
			(#{entryId});
	</insert>
	
	<select id="getEntryId" resultType="jp.co.ot.shiritori.domain.response.EntryIdResponse">
		SELECT
			entry AS entryId
		FROM
			training.shiritori_entry
		WHERE
			entry = #{entryId};
	</select>
	
	<select id="judge" resultType="jp.co.ot.shiritori.domain.response.ShiritoriResultResponse">
		SELECT
			word
		FROM
			training.shiritori
		WHERE
			entry = #{entryId}
		AND
			word = #{request.word};
	</select>
	
	<insert id="saveWord">
		INSERT INTO
			training.shiritori (entry, word)
		VALUES
			(#{entryId}, #{request.word});
	</insert>

</mapper>